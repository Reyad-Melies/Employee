@model Employee.Models.Emp

@{
    ViewData["Title"] = "Details";
}

<h1>Hello @Model.FullName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
    </dl>
</div>
<table class="table table-striped">
    <tr>
        <td>Vacation Type</td>
        <td>Balance</td>
        <td>Used</td>
    </tr>
    @for (int i = 0; i < Model.Vacations.Count; i++)
    {
<tr>
    <td>@Model.Vacations.ElementAt(i).Type</td>
    <td>@Model.Vacations.ElementAt(i).Balance</td>
    <td>@Model.Vacations.ElementAt(i).Used</td>
    <td><a asp-action="Request" asp-route-id="@Model.Vacations.ElementAt(i).Id">Request</a></td>
</tr>
    }
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
